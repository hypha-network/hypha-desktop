{
  "name": "hypha-desktop",
  "version": "0.1.0",
  "productName": "Hypha Desktop",
  "description": "Hypha Desktop Application",
  "main": "out/index.js",
  "scripts": {
    "build": "run-s build:*",
    "build:babel": "babel src --out-dir out --copy-files",
    "build:binaries": "electron-builder -mlw --publish never",
    "clean:ui": "shx rm -rf assets/ui/",
    "dev:electron": "wait-on assets/ui/index.js; cross-env NODE_ENV=development electron -r @babel/register src/index.js",
    "dev:ui": "webpack --progress --colors --config webpack.ui.config.js",
    "format:ui": "prettier --write \"src/ui/**/*.{js,json}\"",
    "install-app-deps": "electron-builder install-app-deps",
    "postinstall": "run-s install-app-deps",
    "start:dev": "npm run clean:ui; concurrently \"npm:dev:ui\" \"npm:dev:electron\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:ui"
    }
  },
  "keywords": [
    "app",
    "desktop",
    "ipfs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hypha-publication/hypha-desktop"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hypha-publication/hypha-desktop/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@svgr/cli": "^4.3.1",
    "@svgr/webpack": "^4.3.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.1",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15",
    "electron-reload": "^1.4.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "shx": "^0.3.2",
    "style-loader": "^0.23.1",
    "wait-on": "^3.3.0",
    "webpack": "^4.35.3",
    "webpack-build-notifier": "^1.0.3",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.4",
    "cheerio": "^1.0.0-rc.3",
    "classnames": "^2.2.6",
    "electron-store": "^4.0.0",
    "electron-updater": "^4.1.2",
    "file-type": "^12.0.1",
    "fix-path": "^2.1.0",
    "fs-extra": "^8.1.0",
    "go-ipfs-dep": "0.4.21",
    "ipfs-http-client": "^33.1.0",
    "ipfsd-ctl": "^0.44.1",
    "is-ipfs": "^0.6.1",
    "lodash": "^4.17.14",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-feather": "^2.0.3"
  }
}
